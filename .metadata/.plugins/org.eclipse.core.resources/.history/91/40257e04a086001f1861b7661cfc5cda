<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.UserMapper">
	<resultMap type="Users" id="userMap">
		<id property="no" column="no"/>
		
		<result property="no" column="no"/>
		<result property="userId" column="user_id"/>
		<result property="userPw" column="user_pw"/>
		<result property="name" column="name"/>
		<result property="email" column="email"/>
		<result property="enabled" column="enabled"/>
		
		<collection property="authList"></collection>
	</resultMap>
	
	<resultMap type="UserAuth" id="authMap">
		<id property="auth_no" column="auth_no"/>
		
		<result property="auth_no" column="auth_no"/>
		<result property="userId" column="user_id"/>
		<result property="auth" column="user_pw"/>
		<result property="name" column="name"/>
	</resultMap>
	
	<!-- 회원 등록 -->
	<insert id="insert">
		insert into user(user_id, user_pw, name, email)
			values (#{user_id}, #{user_pw}, #{name}, #{email})
	</insert>
	
	<select id="select" resultType="Users">
		select * from user
		where no = #{no}
	</select>
	
	<!-- 로그인 -->
	<select id="login" resultType="Users">
		select u.no, u.user_id, u.user_pw, u.name, u.email, u.enabled, a.auth
		from user u
		left outer join user_auth a on (u.user_id = a.user_id)
		where u.user_id = #{user_id}
	</select>
	
	<!-- 권한 등록 -->
	<insert id="insertAuth">
		insert into user_auth(user_id, auth)
			values (#{user_id}, #{auth})
	</insert>
	
	<!-- 회원 수정 -->
	<update id="update">
		update user set user_pw = #{user_pw}, name = #{name}, email = #{email}
		where user_id = #{user_id}
	</update>
	
	<delete id="delete">
		delete from user
		where user_id = #{user_id}
	</delete>
</mapper>  